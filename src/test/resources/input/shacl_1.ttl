@prefix ex: <http://example.org/> .

@prefix sh:     <http://www.w3.org/ns/shacl#> .
@prefix rdf:    <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix dcat:   <http://www.w3.org/ns/dcat#> .
@prefix dct:    <http://purl.org/dc/terms/> .
@prefix vcard:  <http://www.w3.org/2006/vcard/ns#> .
@prefix foaf:   <http://xmlns.com/foaf/0.1/> .
@prefix xsd:    <http://www.w3.org/2001/XMLSchema#> .
@prefix dcatap: <http://data.europa.eu/r5r/> .
@prefix spdx:   <http://spdx.org/rdf/terms#> .
@prefix ex:     <http://example.org/shapes#> .

ex:dcatDatasetShape a sh:NodeShape ;
  sh:targetClass dcat:Dataset ;
  sh:property [ sh:path dct:title ; sh:minCount 1 ; sh:datatype rdf:langString ] ;
  sh:property [ sh:path dct:description ; sh:minCount 1 ; sh:datatype rdf:langString ] ;
  sh:property [ sh:path dct:identifier ; sh:minCount 1 ; sh:datatype xsd:string ] ;
  sh:property [ sh:path dct:hasVersion ; sh:minCount 1 ; sh:datatype xsd:string ] ;
  sh:property [ sh:path dct:issued ; sh:minCount 1 ; sh:datatype xsd:string ] ;
  sh:property [ sh:path dct:modified ; sh:minCount 1 ; sh:datatype xsd:string ] ;
  sh:property [ sh:path dcat:contactPoint ; sh:minCount 1 ; sh:node ex:vcardKindShape ] ;
  sh:property [ sh:path dct:creator ; sh:minCount 1 ; sh:node ex:foafPersonShape ] ;
  sh:property [ sh:path dcat:distribution ; sh:minCount 0 ; sh:node ex:dcatDistributionShape ] ;
  sh:property [ sh:path dcatap:applicableLegislation ; sh:minCount 0 ; sh:nodeKind sh:IRI ] ;
  sh:property [ sh:path dcatap:hvdCategory ; sh:minCount 0 ; sh:nodeKind sh:IRI ] .

ex:dcatDistributionShape a sh:NodeShape ;
  sh:targetClass dcat:Distribution ;
  sh:property [ sh:path dct:title ; sh:minCount 1 ; sh:datatype xsd:string ] ;
  sh:property [ sh:path dct:description ; sh:minCount 1 ; sh:datatype rdf:langString ] ;
  sh:property [ sh:path dcat:byteSize ; sh:minCount 1 ; sh:datatype xsd:integer ] ;
  sh:property [ sh:path dcat:mediaType ; sh:minCount 1 ; sh:nodeKind sh:IRI ] ;
  sh:property [ sh:path dcat:accessURL ; sh:minCount 1 ; sh:nodeKind sh:IRI ] ;
  sh:property [ sh:path spdx:checksum ; sh:minCount 0 ; sh:node ex:spdxChecksumShape ] .

ex:vcardKindShape a sh:NodeShape ;
  sh:targetClass vcard:Kind ;
  sh:property [ sh:path vcard:fn ; sh:minCount 1 ; sh:datatype rdf:langString ] ;
  sh:property [ sh:path vcard:hasEmail ; sh:minCount 1 ; sh:nodeKind sh:IRI ] .

ex:foafPersonShape a sh:NodeShape ;
  sh:targetClass foaf:Person ;
  sh:property [ sh:path foaf:name ; sh:minCount 1 ; sh:datatype rdf:langString ] ;
  sh:property [ sh:path vcard:organization-name ; sh:minCount 0 ; sh:datatype rdf:langString ] .

ex:spdxChecksumShape a sh:NodeShape ;
  sh:property [ sh:path spdx:algorithm ; sh:minCount 1 ] ;
  sh:property [ sh:path spdx:checksumValue ; sh:minCount 1 ; sh:datatype xsd:string ] .
